{
    "inputs": [
        {
            "type": "promptString",
            "id": "github-token",
            "password": true, // Encrypted at-rest
            "description": "GitHub PAT"
        }
    ],
    "servers": {
        "github": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${input:github-token}"
            }
        },
    }
}